# Example environment configuration
# Copy this file to .env and customize for your setup

# Camera Settings
CAMERA_INDEX=0
CAPTURE_INTERVAL=60
IMAGE_WIDTH=1280
IMAGE_HEIGHT=720

# Detection Settings
MOTION_THRESHOLD=25
MIN_CONTOUR_AREA=500

# Storage Settings
DATA_DIR=/app/data

# Weather API Settings (Optional - Sign up at openweathermap.org)
# WEATHER_API_KEY=your_api_key_here
# WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather
# LOCATION_LAT=40.7128
# LOCATION_LON=-74.0060

# Logging Settings
LOG_LEVEL=INFO
